@model IEnumerable<ShowGroupViewModel>

<h1>گروه ها</h1>

<ul class="list-group">
    @foreach (var item in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a href="/Group/@item.GroupId/@item.Name">@item.Name</a>
            <span class="badge bg-primary rounded-pill">
                @item.ProductCount
            </span>
        </li>
    }
</ul>